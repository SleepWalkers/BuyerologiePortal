<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.R_UserCommentDao">
  	<resultMap id="R_UserCommentMap" type="R_UserComment" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="user_id" property="userId" jdbcType="BIGINT" />
	    <result column="comment_id" property="commentId" jdbcType="BIGINT" />
  	</resultMap>
  	
	<insert id="insertR_UserComment" parameterType="R_UserComment">
		INSERT INTO yunjee_r_user_comment
	      (user_id, comment_id)
	    VALUES
	      (#{userId}, #{commentId})
	</insert>
	
	<update id="updateR_UserComment" parameterType="R_UserComment">
    	UPDATE yunjee_r_user_comment 
    	<set>
    		<if test="userId != null">
    			user_id = #{userId},
	        </if>
	        
      		<if test="commentId != null">
    			comment_id = #{commentId}
	        </if>
	    </set>    
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_r_user_comment where id = #{id}
    </delete>
    
    <delete id="deleteByR_UserComment" parameterType="R_UserComment">
    	DELETE 
    	FROM yunjee_r_user_comment
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="userId != null">
    			user_id = #{userId}
	        </if>
	        
      		<if test="commentId != null">
    			AND comment_id = #{commentId}
	        </if>    	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="R_UserCommentMap">
    	SELECT * FROM yunjee_r_user_comment WHERE id = #{id}
    </select>
    
    <select id="selectByR_UserComment" parameterType="R_UserComment" resultMap="R_UserCommentMap">
    	SELECT * 
    	FROM yunjee_r_user_comment
     	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="userId != null">
    			user_id = #{userId}
	        </if>
	        
      		<if test="commentId != null">
    			AND comment_id = #{commentId}
	        </if>    	
    	</trim>   	
    </select>
</mapper>