<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.FeedBackDao">
	<resultMap id="FeedBackMap" type="FeedBack" >
	    <id column="id" property="id" jdbcType="INTEGER" />
	    <result column="type" property="type" jdbcType="INTEGER" />
	    <result column="content" property="content" jdbcType="VARCHAR" />
	</resultMap>
	<insert id="insertFeedBack" parameterType="FeedBack">
		INSERT INTO yunjee_feedback
	      (type, content)
	    VALUES
	      (#{type}, #{content})
	</insert>
	
	<update id="updateFeedBack" parameterType="FeedBack">
    	UPDATE yunjee_feedback 
    	<set>
    	    <if test="type != null">
    			type = #{type},
	        </if>    	
	        
    	    <if test="content != null">
    			content = #{content}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_feedback where id = #{id}
    </delete>
    
    <delete id="deleteByFeedBack" parameterType="FeedBack">
    	DELETE
    	FROM yunjee_feedback
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="type != null">
    			type = #{type}
	        </if>    	
	        
    	    <if test="content != null">
    			AND content = #{content}
	        </if>
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="FeedBackMap">
    	SELECT * FROM yunjee_feedback WHERE id = #{id}
    </select>
    
    <select id="selectByFeedBack" parameterType="FeedBack" resultMap="FeedBackMap">
    	SELECT * 
    	FROM yunjee_feedback
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="type != null">
    			type = #{type}
	        </if>    	
	        
    	    <if test="content != null">
    			AND content = #{content}
	        </if>
    	</trim>
    </select>
</mapper>