<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.R_CateSpuDao">
  	<resultMap id="R_CateSpuMap" type="R_CateSpu" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="cate_id" property="cateId" jdbcType="BIGINT" />
	    <result column="spu_id" property="spuId" jdbcType="BIGINT" />
  	</resultMap>
	<insert id="insertR_CateSpu" parameterType="R_CateSpu">
		INSERT INTO yunjee_r_cate_spu
	      (cate_id, spu_id)
	    VALUES
	      (#{cateId}, #{spuId})
	</insert>
	
	<update id="updateR_CateSpu" parameterType="R_CateSpu">
    	UPDATE yunjee_r_cate_spu 
    	<set>
     	    <if test="cateId != null">
    			cate_id = #{cateId},
	        </if>   
     	    <if test="spuId != null">
    			spu_id = #{spuId}
	        </if>
	     </set>   
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_r_cate_spu where id = #{id}
    </delete>
    
    <delete id="deleteByR_CateSpu" parameterType="R_CateSpu">
    	DELETE
    	FROM yunjee_r_cate_spu
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      	    <if test="cateId != null">
    			cate_id = #{cateId}
	        </if>   
     	    <if test="spuId != null">
    			AND spu_id = #{spuId}
	        </if>   	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="R_CateSpuMap">
    	SELECT * FROM yunjee_r_cate_spu WHERE id = #{id}
    </select>
    
    <select id="selectByR_CateSpu" parameterType="R_CateSpu" resultMap="R_CateSpuMap">
    	SELECT * 
    	FROM yunjee_r_cate_spu
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      	    <if test="cateId != null">
    			cate_id = #{cateId}
	        </if>   
     	    <if test="spuId != null">
    			AND spu_id = #{spuId}
	        </if>   	
    	</trim>    	
    </select>
</mapper>