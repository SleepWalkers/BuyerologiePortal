<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.ShareDao">
    <resultMap id="ShareMap" type="Share" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="the_key" property="theKey" jdbcType="BIGINT" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="LONGVARCHAR"/>
		<result column="url" property="url" jdbcType="VARCHAR" />
		<result column="forwoard" property="forwoard" jdbcType="VARCHAR" />
		<result column="user_id" property="userId" jdbcType="BIGINT" />
		<result column="date" property="date" jdbcType="TIMESTAMP" />
	 </resultMap>
	<insert id="insertShare" parameterType="Share">
		INSERT INTO yunjee_share
	      (type, the_key, title, content, url, forwoard, user_id, date)
	    VALUES
	      (#{type}, #{theKey}, #{title}, #{content}, #{url}, #{forwoard}, #{userId}, #{date})
	</insert>
	
	<update id="updateShare" parameterType="Share">
    	UPDATE yunjee_share 
    	<set>
      		<if test="type != null">
    			type = #{type},
	        </if>

      		<if test="theKey != null">
    			the_key = #{theKey},
	        </if>

      		<if test="title != null">
    			title = #{title},
	        </if>

		    <if test="content != null">
    			content = #{content},
	        </if>

		    <if test="url != null">
    			url = #{url},
	        </if>

		    <if test="forwoard != null">
    			forwoard = #{forwoard},
	        </if>

		    <if test="userId != null">
    			user_id = #{userId},
	        </if>

		    <if test="date != null">
    			date = #{date}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_share WHERE id = #{id}
    </delete>
    
    <delete id="deleteByShare" parameterType="Share">
    	DELETE 
    	FROM yunjee_share
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="type != null">
    			type = #{type}
	        </if>

      		<if test="theKey != null">
    			AND the_key = #{theKey}
	        </if>

      		<if test="title != null">
    			AND title = #{title}
	        </if>

		    <if test="content != null">
    			AND content = #{content}
	        </if>

		    <if test="url != null">
    			AND url = #{url}
	        </if>

		    <if test="forwoard != null">
    			AND forwoard = #{forwoard}
	        </if>

		    <if test="userId != null">
    			AND user_id = #{userId}
	        </if>

		    <if test="date != null">
    			AND date = #{date}
	        </if>    	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="ShareMap">
    	SELECT * FROM yunjee_share WHERE id = #{id}
    </select>
    
    <select id="selectByShare" parameterType="Share" resultMap="ShareMap">
    	SELECT * 
    	FROM yunjee_share
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="type != null">
    			type = #{type}
	        </if>

      		<if test="theKey != null">
    			AND the_key = #{theKey}
	        </if>

      		<if test="title != null">
    			AND title = #{title}
	        </if>

		    <if test="content != null">
    			AND content = #{content}
	        </if>

		    <if test="url != null">
    			AND url = #{url}
	        </if>

		    <if test="forwoard != null">
    			AND forwoard = #{forwoard}
	        </if>

		    <if test="userId != null">
    			AND user_id = #{userId}
	        </if>

		    <if test="date != null">
    			AND date = #{date}
	        </if>    	
    	</trim>
    </select>
</mapper>