<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.R_TagPicTagDao">
    <resultMap id="R_TagPicTagMap" type="R_TagPicTag" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="tag_id" property="tagId" jdbcType="BIGINT" />
	    <result column="pic_tag_id" property="picTagId" jdbcType="BIGINT" />
	    <result column="weight" property="weight" jdbcType="DOUBLE" />
  	</resultMap>
  	
	<insert id="insertR_TagPicTag" parameterType="R_TagPicTag">
		INSERT INTO yunjee_r_tag_pic_tag
	      (tag_id, pic_tag_id,weight)
	    VALUES
	      (#{tagId}, #{picTagId}, #{weight})
	</insert>
	
	<update id="updateR_TagPicTag" parameterType="R_TagPicTag">
    	UPDATE yunjee_r_tag_pic_tag 
    	<set>
      		<if test="tagId != null">
    			tag_id = #{tagId},
	        </if>

      		<if test="picTagId != null">
    			pic_tag_id = #{picTagId},
	        </if>
	        
	        <if test="weight != null">
    			weight = #{weight}
	        </if>
		</set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_r_tag_pic_tag where id = #{id}
    </delete>
    
    <delete id="deleteByR_TagPicTag" parameterType="R_TagPicTag">
    	DELETE FROM yunjee_r_tag_pic_tag
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="tagId != null">
    			tag_id = #{tagId}
	        </if>

      		<if test="picTagId != null">
    			AND pic_tag_id = #{picTagId}
	        </if>
	        
	        <if test="weight != null">
    			AND weight = #{weight}
	        </if>
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="R_TagPicTagMap">
    	SELECT * FROM yunjee_r_tag_pic_tag WHERE id = #{id}
    </select>
    
    <select id="selectByR_TagPicTag" parameterType="R_TagPicTag" resultMap="R_TagPicTagMap">
    	SELECT * FROM yunjee_r_tag_pic_tag
      	<trim prefix="WHERE" prefixOverrides="AND|OR">
        	<if test="tagId != null">
    			tag_id = #{tagId}
	        </if>

      		<if test="picTagId != null">
    			AND pic_tag_id = #{picTagId}
	        </if>
	        
	        <if test="weight != null">
    			AND weight = #{weight}
	        </if>	
    	</trim>  	
    </select>
</mapper>