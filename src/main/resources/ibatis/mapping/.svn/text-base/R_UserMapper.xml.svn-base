<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.R_UserDao">
  	<resultMap id="R_UserMap" type="R_User" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="user_liked_id" property="userLikedId" jdbcType="BIGINT" />
	    <result column="user_id" property="userId" jdbcType="BIGINT" />
  	</resultMap>
  
	<insert id="insertR_User" parameterType="R_User">
		INSERT INTO yunjee_r_user
	      (user_id, user_liked_id)
	    VALUES
	      (#{userId}, #{userLikedId})
	</insert>
	
	<update id="updateR_User" parameterType="R_User">
    	UPDATE yunjee_r_user 
    	<set>
    		<if test="userId != null">
    			user_id = #{userId},
	        </if>
	        
      		<if test="userLikedId != null">
    			user_liked_id = #{userLikedId}
	        </if>
	     </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_r_user where id = #{id}
    </delete>
    
    <delete id="deleteByR_User" parameterType="R_User">
    	DELETE 
    	FROM yunjee_r_user
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
     		<if test="userId != null">
    			user_id = #{userId}
	        </if>
	        
      		<if test="userLikedId != null">
    			AND user_liked_id = #{userLikedId}
	        </if>   	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="countByR_User" parameterType="R_User" resultType="int">
		SELECT count(*) 
		FROM yunjee_r_user
		<where>
		    <if test="userId != null">
    			user_id = #{userId}
	        </if>
	        
      		<if test="userLikedId != null">
    			AND user_liked_id = #{userLikedId}
	        </if>
		</where>
	</select>
	
    <select id="selectById" parameterType="int" resultMap="R_UserMap">
    	SELECT * FROM yunjee_r_user WHERE id = #{id}
    </select>
	
	<select id="selectByR_User" parameterType="R_User" resultMap="R_UserMap">
		SELECT * 
		FROM yunjee_r_user
		<trim prefix="WHERE" prefixOverrides="AND|OR">
     		<if test="userId != null">
    			user_id = #{userId}
	        </if>
	        
      		<if test="userLikedId != null">
    			AND user_liked_id = #{userLikedId}
	        </if>   	
	        	OR ID = 0
    	</trim>
	</select>
</mapper>