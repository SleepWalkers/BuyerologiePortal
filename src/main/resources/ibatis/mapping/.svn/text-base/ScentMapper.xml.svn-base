<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.ScentDao">
    <resultMap id="ScentMap" type="Scent" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="name" property="name" jdbcType="VARCHAR" />
	    <result column="pic_path" property="picPath" jdbcType="VARCHAR" />
	    <result column="details" property="details" jdbcType="VARCHAR" />
	    <result column="description" property="description" jdbcType="LONGVARCHAR"/>
	    <result column="aliases" property="aliases" jdbcType="VARCHAR" />
  	</resultMap>
	<insert id="insertScent" parameterType="Scent">
		INSERT INTO yunjee_scent
	      (name, details, pic_path, aliases, description)
	    VALUES
	      (#{name}, #{details}, #{picPath}, #{aliases}, #{description})
	</insert>
	
	<update id="updateScent" parameterType="Scent">
    	UPDATE yunjee_scent 
    	<set>
      		<if test="name != null">
    			name = #{name},
	        </if>

      		<if test="details != null">
    			details = #{details},
	        </if>

      		<if test="picPath != null">
    			pic_path = #{picPath},
	        </if>

		    <if test="aliases != null">
    			aliases = #{aliases},
	        </if>

		    <if test="description != null">
    			description = #{description}
	        </if>
		</set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_scent where id = #{id}
    </delete>
    
    <delete id="deleteByScent" parameterType="Scent">
    	DELETE FROM yunjee_scent
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
        	<if test="name != null">
    			name = #{name}
	        </if>

      		<if test="details != null">
    			AND details = #{details}
	        </if>

      		<if test="picPath != null">
    			AND pic_path = #{picPath}
	        </if>

		    <if test="aliases != null">
    			AND aliases = #{aliases}
	        </if>

		    <if test="description != null">
    			AND description = #{description}
	        </if>  	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="ScentMap">
    	SELECT * FROM yunjee_scent WHERE id = #{id}
    </select>
    
    <select id="selectByIdList" parameterType="string" resultMap="ScentMap">
    	select * 
    	from yunjee_scent
    	where id in (${idList})
    </select>
    
    <select id="selectByScent" parameterType="Scent" resultMap="ScentMap">
    	SELECT * FROM yunjee_scent
      	<trim prefix="WHERE" prefixOverrides="AND|OR">
        	<if test="name != null">
    			name = #{name}
	        </if>

      		<if test="details != null">
    			AND details = #{details}
	        </if>

      		<if test="picPath != null">
    			AND pic_path = #{picPath}
	        </if>

		    <if test="aliases != null">
    			AND aliases = #{aliases}
	        </if>

		    <if test="description != null">
    			AND description = #{description}
	        </if>  	
    	</trim>  	
    </select>
</mapper>