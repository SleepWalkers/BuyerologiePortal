<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.ScentTypeDao">
    <resultMap id="ScentTypeMap" type="ScentType" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="en_name" property="enName" jdbcType="VARCHAR" />
		<result column="zh_name" property="zhName" jdbcType="VARCHAR" />
		<result column="time" property="time" jdbcType="VARCHAR" />
	</resultMap>
		
	<insert id="insertScentType" parameterType="ScentType">
		INSERT INTO yunjee_scent_type
	      (en_name, zh_name, time)
	    VALUES
	      (#{enName}, #{zhName}, #{time})
	</insert>
	
	<update id="updateScentType" parameterType="ScentType">
    	UPDATE yunjee_scent_type 
    	<set>
      		<if test="enName != null">
    			en_name = #{enName},
	        </if>

      		<if test="zhName != null">
    			zh_name = #{zhName},
	        </if>
	        
	        <if test="time != null">
    			time = #{time}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_scent_type where id = #{id}
    </delete>
    
    <delete id="deleteByScentType" parameterType="ScentType">
    	DELETE FROM yunjee_scent_type
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
        	<if test="enName != null">
    			en_name = #{enName}
	        </if>

      		<if test="zhName != null">
    			AND zh_name = #{zhName}
	        </if>
	        
	        <if test="time != null">
    			AND time = #{time}
	        </if>  	
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="ScentTypeMap">
    	SELECT * FROM yunjee_scent_type WHERE id = #{id}
    </select>
    
    <select id="selectByScentType" parameterType="ScentType" resultMap="ScentTypeMap">
    	SELECT * 
    	FROM yunjee_scent_type 
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
        	<if test="enName != null">
    			en_name = #{enName}
	        </if>

      		<if test="zhName != null">
    			AND zh_name = #{zhName}
	        </if>
	        
	        <if test="time != null">
    			AND time = #{time}
	        </if>  	
    	</trim>
    </select>
    
    <select id="selectAll" resultMap="ScentTypeMap">
    	select * from yunjee_scent_type
    </select>
</mapper>