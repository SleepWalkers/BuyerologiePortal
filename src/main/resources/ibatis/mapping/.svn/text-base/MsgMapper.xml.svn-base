<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.MsgDao">
  	<resultMap id="Msg" type="Msg" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="type" property="type" jdbcType="VARCHAR" />
	    <result column="msg_id" property="msgId" jdbcType="BIGINT" />
	    <result column="sender_id" property="senderId" jdbcType="BIGINT" />
	    <result column="receiver_id" property="receiverId" jdbcType="BIGINT" />
	    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
	    <result column="read_date" property="readDate" jdbcType="TIMESTAMP" />
	    <result column="status" property="status" jdbcType="VARCHAR" />
  	</resultMap>
	<insert id="insertMsg" parameterType="Msg">
		INSERT INTO yunjee_msg
	      (type, msg_id, sender_id, receiver_id, create_date, read_date, 
	      		status)
	    VALUES
	      (#{type}, #{msgId}, #{senderId}, #{receiverId}, #{createDate},  #{readDate}, 
	      		#{status})
	</insert>
	
	<update id="updateMsg" parameterType="Msg">
    	UPDATE yunjee_msg 
    	<set>
    	    <if test="type != null">
      			type = #{type},
      		</if>
      		
      		<if test="msgId != null">
      			msg_id = #{msgId},
      		</if>
      		
      		<if test="senderId != null">
      			sender_id = #{senderId},
      		</if>
      		
      		<if test="receiverId != null">
      			receiver_id = #{receiverId},
      		</if>
      		
      		<if test="createDate != null">
      			create_date = #{createDate},
      		</if>
           	
           	<if test="readDate != null">
      			read_date = #{readDate},
      		</if>
      		
      		<if test="status != null">
      			status = #{status}
      		</if>
      	</set>
    	WHERE id = #{id}
    </update>
    
    <update id="updateMsgByReceiverId" parameterType="Msg">
    	update yunjee_msg
    	set
    		status = #{status}
    	where
    		receiver_id = #{receiverId}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_msg where id = #{id}
    </delete>
    
    <delete id="deleteByMsg" parameterType="Msg">
    	DELETE
    	FROM yunjee_msg
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    	    <if test="type != null">
      			type = #{type}
      		</if>
      		
      		<if test="msgId != null">
      			AND msg_id = #{msgId}
      		</if>
      		
      		<if test="senderId != null">
      			AND sender_id = #{senderId}
      		</if>
      		
      		<if test="receiverId != null">
      			AND receiver_id = #{receiverId}
      		</if>
      		
      		<if test="createDate != null">
      			AND create_date = #{createDate}
      		</if>
           	
           	<if test="readDate != null">
      			AND read_date = #{readDate}
      		</if>
      		
      		<if test="status != null">
      			AND status = #{status}
      		</if>   
      			OR ID = 0 	
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="Msg">
    	SELECT * FROM yunjee_msg WHERE id = #{id}
    </select>
    
    <select id="selectByReceiverIdOrderByCreateDateWithLimit" parameterType="map" resultMap="Msg">
        select * 
    	from yunjee_msg
    	<where>
    		receiver_id = #{receiverId}
    	</where>
    	order by create_date desc
    	<if test="start != null">
    		<if test="limit != null">
    			limit ${start},${limit}
    		</if>
    	</if>
    	
    	<if test="start == null">
    		<if test="limit != null">
    			limit ${limit}
    		</if>
    	</if>
    </select>
    
    <select id="countByStatusAndReceiverId" parameterType="map" resultType="int">
    	select count(*) 
    	from yunjee_msg
    	where status = #{status} and receiver_id = #{receiverId}
    </select>
    
    <select id="selectByMsg" parameterType="Msg" resultMap="Msg">
    	SELECT * 
    	FROM yunjee_msg
     	<trim prefix="WHERE" prefixOverrides="AND|OR">
    	    <if test="type != null">
      			type = #{type,jdbcType=VARCHAR}
      		</if>
      		
      		<if test="msgId != null">
      			AND msg_id = #{msgId}
      		</if>
      		
      		<if test="senderId != null">
      			AND sender_id = #{senderId}
      		</if>
      		
      		<if test="receiverId != null">
      			AND receiver_id = #{receiverId}
      		</if>
      		
      		<if test="createDate != null">
      			AND create_date = #{createDate}
      		</if>
           	
           	<if test="readDate != null">
      			AND read_date = #{readDate}
      		</if>
      		
      		<if test="status != null">
      			AND status = #{status}
      		</if>
    	</trim>   
    </select>
</mapper>