<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.TopicReplyDao">
    <resultMap id="TopicReplyMap" type="TopicReply" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="creator_id" property="creatorId" jdbcType="BIGINT" />
		<result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
		<result column="content" property="content" jdbcType="LONGVARCHAR"/>
		<result column="preview_text" property="previewText" jdbcType="LONGVARCHAR"/>
		<result column="reply_num" property="replyNum" jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="SMALLINT" />
		<result column="topic_id" property="topicId" jdbcType="BIGINT" />
		<result column="parent_id" property="parentId" jdbcType="BIGINT" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="last_modify_date" property="lastModifyDate" jdbcType="TIMESTAMP" />
	</resultMap>
	<insert id="insertTopicReply" parameterType="TopicReply" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO yunjee_topic_reply
	      (topic_id, parent_id, creator_id, create_date, last_modify_date, content, 
	      		preview_text, reply_num, type, status)
	    VALUES
	      (#{topicId}, #{parentId}, #{creatorId}, #{createDate}, #{lastModifyDate},  #{content}, 
	      		#{previewText}, #{replyNum}, #{type}, #{status})
	</insert>
	
	<update id="updateTopicReply" parameterType="TopicReply">
    	UPDATE yunjee_topic_reply 
    	<set>
      		<if test="topicId != null">
    			topic_id = #{topicId},
	        </if>

      		<if test="parentId != null">
    			parent_id = #{parentId},
	        </if>

      		<if test="creatorId != null">
    			creator_id = #{creatorId},
	        </if>

		    <if test="createDate != null">
    			create_date = #{createDate},
	        </if>

		    <if test="lastModifyDate != null">
    			last_modify_date = #{lastModifyDate},
	        </if>

		    <if test="content != null">
    			content = #{content},
	        </if>

		    <if test="previewText != null">
    			preview_text = #{previewText},
	        </if>

		    <if test="replyNum != null">
    			reply_num = #{replyNum},
	        </if>

      		<if test="type != null">
    			type = #{type},
	        </if>

      		<if test="status != null">
    			status = #{status}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_topic_reply WHERE id = #{id}
    </delete>
    
    <delete id="deleteByTopicReply" parameterType="TopicReply">
    	DELETE 
    	FROM yunjee_topic_reply
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="topicId != null">
    			AND topic_id = #{topicId}
	        </if>

      		<if test="parentId != null">
    			AND parent_id = #{parentId}
	        </if>

      		<if test="creatorId != null">
    			AND creator_id = #{creatorId}
	        </if>

		    <if test="createDate != null">
    			AND create_date = #{createDate}
	        </if>

		    <if test="lastModifyDate != null">
    			AND last_modify_date = #{lastModifyDate}
	        </if>

		    <if test="content != null">
    			AND content = #{content}
	        </if>

		    <if test="previewText != null">
    			AND preview_text = #{previewText}
	        </if>

		    <if test="replyNum != null">
    			AND reply_num = #{replyNum}
	        </if>

      		<if test="type != null">
    			AND type = #{type}
	        </if>

      		<if test="status != null">
    			AND status = #{status}
	        </if>   
	        	OR ID = 0 	
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="TopicReplyMap">
    	SELECT * FROM yunjee_topic_reply WHERE id = #{id}
    </select>
    
    <select id="selectByIdList" parameterType="String" resultMap="TopicReplyMap">
    	select * from yunjee_topic_reply where id in (${idList})
    </select>
    
    <select id="selectByIdListAndTypeOrderByCreateDate" parameterType="map" resultMap="TopicReplyMap">
    	select * 
    	from yunjee_topic_reply
    	where type = #{type} AND parent_id in (${idList})
    	order by last_modify_date
        <if test="start != null">
        	<if test="limit != null">
        		limit ${start},${limit}    
        	</if>
        </if>
   	
   		<if test="start == null">
   			<if test="limit != null">
   				limit ${limit}
   			</if>
   		</if>
    </select>
    
    <select id="selectByTopicIdAndTypeWithLimit" parameterType="map" resultMap="TopicReplyMap">
    	select * 
    	from yunjee_topic_reply
    	where type = #{type} AND topic_id = #{topicId}
    	
    	<if test="creatorId == null">
    		order by last_modify_date
    	</if>
    	
    	<if test="creatorId != null">
    		AND creator_id = #{creatorId}
    		order by last_modify_date
    	</if>
        
        <if test="start != null">
        	<if test="limit != null">
        		limit ${start},${limit}    
        	</if>
        </if>
   	
   		<if test="start == null">
   			<if test="limit != null">
   				limit ${limit}
   			</if>
   		</if>
    </select>
        
    <select id="selectByParametersOrderBy" parameterType="SQLParameters" resultMap="TopicReplyMap">
    	select * 
    	from yunjee_topic_reply
    	<where>
    		type = #{type}
    		
    		<if test="topicId != null">
    			AND topic_id = #{topicId}
    		</if>
    		
    		<if test="idList != null">
    			AND parent_id in (${idList})
    		</if>
    		
    		<if test="parentId != null">
    			AND parent_id = #{parentId}
	        </if> 
	        
	        <if test="creatorId != null">
    			AND creator_id = #{creatorId}
	        </if> 
    	</where>
    	    
        <if test="orderBy != null">
   			order by ${orderBy}
        </if>
        
        <if test="start != null">
        	<if test="limit != null">
        		limit ${start},${limit}    
        	</if>
        </if>
   	
   		<if test="start == null">
   			<if test="limit != null">
   				limit ${limit}
   			</if>
   		</if>
    </select>
    
    <select id="countByTopicReply" parameterType="TopicReply" resultType="int">
     	SELECT count(*)
    	FROM yunjee_topic_reply
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="topicId != null">
    			AND topic_id = #{topicId}
	        </if>

      		<if test="parentId != null">
    			AND parent_id = #{parentId}
	        </if>

      		<if test="creatorId != null">
    			AND creator_id = #{creatorId}
	        </if>

		    <if test="createDate != null">
    			AND create_date = #{createDate}
	        </if>

		    <if test="lastModifyDate != null">
    			AND last_modify_date = #{lastModifyDate}
	        </if>

		    <if test="content != null">
    			AND content = #{content}
	        </if>

		    <if test="previewText != null">
    			AND preview_text = #{previewText}
	        </if>

		    <if test="replyNum != null">
    			AND reply_num = #{replyNum}
	        </if>

      		<if test="type != null">
    			AND type = #{type}
	        </if>

      		<if test="status != null">
    			AND status = #{status}
	        </if>   	
    	</trim>    	   
    </select>
    <select id="selectByTopicReply" parameterType="TopicReply" resultMap="TopicReplyMap">
    	SELECT *
    	FROM yunjee_topic_reply
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="topicId != null">
    			AND topic_id = #{topicId}
	        </if>

      		<if test="parentId != null">
    			AND parent_id = #{parentId}
	        </if>

      		<if test="creatorId != null">
