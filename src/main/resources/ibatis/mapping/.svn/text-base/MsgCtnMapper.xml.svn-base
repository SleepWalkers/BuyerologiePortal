<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.MsgCtnDao">
  	<resultMap id="MsgCtnMap" type="MsgCtn" >
	    <id column="id" property="id" jdbcType="INTEGER" />
	    <result column="title" property="title" jdbcType="VARCHAR" />
	    <result column="content" property="content" jdbcType="VARCHAR" />
  	</resultMap>
	<insert id="insertMsgCtn" parameterType="MsgCtn" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO yunjee_msg_ctn
	      (title, content)
	    VALUES
	      (#{title}, #{content})
	</insert>
	
	<update id="updateMsgCtn" parameterType="MsgCtn">
    	UPDATE yunjee_msg_ctn 
    	<set>
     	    <if test="title != null">
    			title = #{title},
	        </if>   	
	        
    	    <if test="content != null">
    			content = #{content}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_msg_ctn where id = #{id}
    </delete>
    
    <delete id="deleteByMsgCtn" parameterType="MsgCtn">
    	DELETE 
    	FROM yunjee_msg_ctn
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
     	    <if test="title != null">
    			title = #{title}
	        </if>   	
    	    <if test="content != null">
    			AND content = #{content}
	        </if>
	        	OR ID = 0    	
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="MsgCtnMap">
    	SELECT * FROM yunjee_msg_ctn WHERE id = #{id}
    </select>
    
    <select id="selectByReceiveId" parameterType="Msg" resultMap="MsgCtnMap">
    	select * 
    	from yunjee_msg_ctn
    	where id in (
    		select distinct msg_id 
    		from yunjee_msg
    		where receiver_id = #{receiverId}
    	)
    </select>
    
    <select id="selectByMsgCtn" parameterType="MsgCtn" resultMap="MsgCtnMap">
    	SELECT * 
    	FROM yunjee_msg_ctn
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
     	    <if test="title != null">
    			title = #{title}
	        </if>   	
    	    <if test="content != null">
    			AND content = #{content}
	        </if>  	
    	</trim>    	
    </select>
</mapper>