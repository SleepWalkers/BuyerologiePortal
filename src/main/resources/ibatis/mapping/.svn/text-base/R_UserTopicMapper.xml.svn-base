<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.R_UserTopicDao">
  	<resultMap id="R_UserTopicMap" type="R_UserTopic" >
	    <id column="id" property="id" jdbcType="BIGINT" />
	    <result column="topic_id" property="topicId" jdbcType="BIGINT" />
	    <result column="user_id" property="userId" jdbcType="BIGINT" />
	    <result column="type" property="type" jdbcType="VARCHAR" />
  	</resultMap>
	<insert id="insertR_UserTopic" parameterType="R_UserTopic">
		INSERT INTO yunjee_r_user_topic
	      (topic_id, user_id, type)
	    VALUES
	      (#{topicId}, #{userId}, #{type})
	</insert>
	
	<update id="updateR_UserTopic" parameterType="R_UserTopic">
    	UPDATE yunjee_r_user_topic 
    	<set>
      		<if test="topicId != null">
    			topic_id = #{topicId},
	        </if>

      		<if test="userId != null">
    			user_id = #{userId},
	        </if>

      		<if test="type != null">
    			type = #{type}
	        </if>
		</set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_r_user_topic where id = #{id}
    </delete>
    
    <delete id="deleteByR_UserTopic" parameterType="R_UserTopic">
    	DELETE FROM yunjee_r_user_topic
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    	    <if test="topicId != null">
    			topic_id = #{topicId}
	        </if>

      		<if test="userId != null">
    			AND user_id = #{userId}
	        </if>

      		<if test="type != null">
    			AND type = #{type}
	        </if>
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="R_UserTopicMap">
    	SELECT * FROM yunjee_r_user_topic WHERE id = #{id}
    </select>
    
    <select id="selectByR_UserTopic" parameterType="R_UserTopic" resultMap="R_UserTopicMap">
    	SELECT * 
    	FROM yunjee_r_user_topic
     	<trim prefix="WHERE" prefixOverrides="AND|OR">
    	    <if test="topicId != null">
    			topic_id = #{topicId}
	        </if>

      		<if test="userId != null">
    			AND user_id = #{userId}
	        </if>

      		<if test="type != null">
    			AND type = #{type}
	        </if>
    	</trim>   
    </select>
</mapper>