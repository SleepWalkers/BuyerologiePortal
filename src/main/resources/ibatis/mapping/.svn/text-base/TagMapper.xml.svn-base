<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.TagDao">
    <resultMap id="TagMap" type="Tag" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="priority" property="priority" jdbcType="TINYINT" />
		<result column="path_name" property="pathName" jdbcType="VARCHAR" />
		<result column="tag_type_id" property="tagTypeId" jdbcType="BIGINT" />
		<result column="heat" property="heat" jdbcType="BIGINT"/>
		<result column="is_use_as_path" property="isUseAsPath" jdbcType="TINYINT"/>
	</resultMap>
	
	<insert id="insertTag" parameterType="Tag" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO yunjee_tag
	      (name,priority,path_name,tag_type_id,heat,is_use_as_path)
	    VALUES
	      (#{name},#{priority},#{pathName},#{tagTypeId},#{heat},#{isUseAsPath})
	</insert>
	
	<update id="updateTag" parameterType="Tag">
    	UPDATE yunjee_tag 
    	<set>
    		<if test="name != null">
    			name = #{name},
	        </if>
	        <if test="priority != null">
    			priority = #{priority},
	        </if>
	        <if test="pathName != null">
    			path_name = #{pathName},
	        </if>
	        <if test="tagTypeId != null">
    			tag_type_id = #{tagTypeId},
	        </if>
	        <if test="heat != null">
    			heat = #{heat},
	        </if>
	        <if test="isUseAsPath != null">
	        	is_use_as_path = #{isUseAsPath}
	        </if>
	    </set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_tag where id = #{id}
    </delete>
    
    <delete id="deleteByTag" parameterType="Tag">
    	DELETE 
    	FROM yunjee_tag
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
     		<if test="name != null">
    			name = #{name}
	        </if>
	        <if test="priority != null">
    			AND priority = #{priority}
	        </if>
	        <if test="pathName != null">
    			AND path_name = #{pathName}
	        </if>
	        <if test="tagTypeId != null">
    			AND tag_type_id = #{tagTypeId}
	        </if>
	        <if test="heat != null">
    			AND heat = #{heat}
	        </if>
	        <if test="isUseAsPath != null">
	        	AND is_use_as_path = #{isUseAsPath}
	        </if>
	        	OR ID = 0
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="TagMap">
    	SELECT * FROM yunjee_tag where id = #{id}
    </select>
    
    <select id="selectAllPathTag" resultMap="TagMap">
    	select * 
    	from yunjee_tag 
    	where is_use_as_path = 1
    	order by priority
    </select>
    
    <select id="selectByIdList" parameterType="string" resultMap="TagMap">
    	select * from yunjee_tag where id in (${idList})
    </select>
    
    <select id="selectByTypeAndSpuId" parameterType="CommentVO" resultMap="TagMap">
    	select * 
    	from yunjee_tag
		where id in (
			select distinct tag_id 
			from yunjee_r_obj_tag
			where type= #{type} and obj_id = #{spuId}
		)
    </select>
    
    <select id="selectByTag" parameterType="int" resultMap="TagMap">
    	    	SELECT * 
    	FROM yunjee_tag
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
     		<if test="name != null">
    			name = #{name}
	        </if>
	        <if test="priority != null">
    			AND priority = #{priority}
	        </if>
	        <if test="pathName != null">
    			AND path_name = #{pathName}
	        </if>
	        <if test="tagTypeId != null">
    			AND tag_type_id = #{tagTypeId}
	        </if>
	        <if test="heat != null">
    			AND heat = #{heat}
	        </if>
	       	<if test="isUseAsPath != null">
	        	AND is_use_as_path = #{isUseAsPath}
	        </if>
    	</trim>
    </select>
    
     <select id="selectAllTags" parameterType="int" resultMap="TagMap">
		SELECT *
    	FROM yunjee_tag
    	order by priority
    </select>
</mapper>