<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunjee.common.dao.SKUDao">
    <resultMap id="SKUMap" type="SKU" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="spu_id" property="spuId" jdbcType="BIGINT" />
		<result column="volume" property="volume" jdbcType="DOUBLE" />
		<result column="price" property="price" jdbcType="DOUBLE" />
	 </resultMap>
	<insert id="insertSKU" parameterType="SKU">
		INSERT INTO yunjee_sku
	      (spu_id, volume, price)
	    VALUES
	      (#{spuId}, #{volume}, #{price})
	</insert>
	
	<update id="updateSKU" parameterType="SKU">
    	UPDATE yunjee_sku 
    	<set>
      		<if test="spuId != null">
    			spu_id = #{spuId},
	        </if>

      		<if test="volume != null">
    			volume = #{volume},
	        </if>

      		<if test="price != null">
    			price = #{price}
	        </if>
		</set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_sku where id = #{id}
    </delete>
    
    <delete id="deleteBySKU" parameterType="SKU">
    	DELETE FROM yunjee_sku
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="spuId != null">
    			spu_id = #{spuId}
	        </if>

      		<if test="volume != null">
    			AND volume = #{volume}
	        </if>

      		<if test="price != null">
    			AND price = #{price}
	        </if>   
	        	OR ID = 0 	
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="SKUMap">
    	SELECT * FROM yunjee_sku WHERE id = #{id}
    </select>
    
    <select id="selectBySKU" parameterType="SKU" resultMap="SKUMap">
    	SELECT * FROM yunjee_sku
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
      		<if test="spuId != null">
    			spu_id = #{spuId}
	        </if>

      		<if test="volume != null">
    			AND volume = #{volume}
	        </if>

      		<if test="price != null">
    			AND price = #{price}
	        </if>
    	</trim>
    </select>
</mapper>