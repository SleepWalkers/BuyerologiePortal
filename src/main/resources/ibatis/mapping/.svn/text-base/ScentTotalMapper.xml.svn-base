<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.yunjee.common.dao.ScentTotalDao">
	<resultMap id="ScentTotalMap" type="ScentTotal" >
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="pic_path" property="picPath" jdbcType="VARCHAR" />
		<result column="details" property="details" jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="LONGVARCHAR"/>
	</resultMap>
	
	<insert id="insertScentTotal" parameterType="ScentTotal">
		INSERT INTO yunjee_scent_total
	      (name, details, pic_path, description)
	    VALUES
	      (#{name}, #{details}, #{picPath}, #{description})
	</insert>
	
	<update id="updateScentTotal" parameterType="ScentTotal">
    	UPDATE yunjee_scent_total 
    	<set>
      		<if test="name != null">
   				name = #{name},
        	</if>
      		<if test="details != null">
   				details = #{details},
        	</if>

      		<if test="picPath != null">
   				pic_path = #{picPath},
        	</if>

		    <if test="description != null">
   				description = #{description}
        	</if>
		</set>
    	WHERE id = #{id}
    </update>
    
    <delete id="deleteById" parameterType="int">
    	DELETE FROM yunjee_scent_total where id = #{id}
    </delete>
    
    <delete id="deleteByScentTotal" parameterType="ScentTotal">
    	DELETE FROM yunjee_scent_total
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="name != null">
   				name = #{name}
        	</if>
      		<if test="details != null">
   				AND details = #{details}
        	</if>

      		<if test="picPath != null">
   				AND pic_path = #{picPath}
        	</if>

		    <if test="description != null">
   				AND description = #{description}
        	</if>
    			OR ID = 0	
    	</trim>
    </delete>
    
    <select id="selectById" parameterType="int" resultMap="ScentTotalMap">
    	SELECT * FROM yunjee_scent_total WHERE id = #{id}
    </select>
    
    <select id="selectByScentTotal" parameterType="ScentTotal" resultMap="ScentTotalMap">
    	SELECT * 
    	FROM yunjee_scent_total
    	<trim prefix="WHERE" prefixOverrides="AND|OR">
    		<if test="name != null">
   				name = #{name}
        	</if>
      		<if test="details != null">
   				AND details = #{details}
        	</if>

      		<if test="picPath != null">
   				AND pic_path = #{picPath}
        	</if>

		    <if test="description != null">
   				AND description = #{description}
        	</if>
    	</trim>
    </select>
    
    <select id="selectAll" resultMap="ScentTotalMap">
    	select * from yunjee_scent_total
    </select>
</mapper>